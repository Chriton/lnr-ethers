{
  "plugins": ["plugins/markdown"],
  "source": {
    "include": ["src", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "theme": "cerulean"
  },
  "opts": {
    "template": "node_modules/clean-jsdoc-theme",
    "destination": "docs/",
    "recurse": true
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}